<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:canvas="clr-namespace:ControlCasa.Classes"
        xmlns:Controls="clr-namespace:ControlCasa.Controls" x:Class="ControlCasa.MainWindow" WindowState="Maximized" WindowStyle="None"
        mc:Ignorable="d" d:DesignWidth="1360" d:DesignHeight="768"
    Title="MainWindow">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="Assets/images/hd_tech_blue.jpg"/>
        </Grid.Background>
        <MediaElement x:Name="alarmSound" LoadedBehavior="Manual" Width="0" Height="0" HorizontalAlignment="Left" Volume="1" VerticalAlignment="Top"/>
        <canvas:DragCanvas AllowDragging="True" AllowDragOutOfView="False">
  
        </canvas:DragCanvas>
        <Controls:Alarm x:Name="ctrlAlarm" />
        <Controls:IndexMenu x:Name="ctrlIndex" Height="400" Width="300" HorizontalAlignment="Left" VerticalAlignment="Top"/>
    </Grid>
</Window>
